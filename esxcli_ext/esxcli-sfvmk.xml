<?xml version="1.0"?>
<plugin xmlns="http://www.solarflare.com">
  <version>1.0.0</version>

   <namespaces>
      <namespace path="sfvmk">
         <description>SFVMK esxcli functionality</description>
      </namespace>
      <!-- esxcli sfvmk mclog -->
      <namespace path="sfvmk.mclog">
         <description>esxcli extension to get/ set the MC logging enable state</description>
      </namespace>
      <!-- esxcli sfvmk statistics -->
      <namespace path="sfvmk.stats">
         <description>esxcli extension to get hardware queue statistics</description>
      </namespace>
      <!-- esxcli sfvmk vpd -->
      <namespace path="sfvmk.vpd">
         <description>esxcli extension to get VPD information</description>
      </namespace>
      <!-- esxcli sfvmk firmware -->
      <namespace path="sfvmk.firmware">
         <description>esxcli extension to get firmware version and update firmware image</description>
      </namespace>
   </namespaces>

   <commands>
      <!-- esxcli sfvmk mclog get -->
      <command path="sfvmk.mclog.get">
         <description>Gets MC logging state</description>
         <input-spec>
           <parameter name="nic-name" type="string" required="true" shortname="n">
            <description>The name of the NIC to configured.</description>
           </parameter>
         </input-spec>
         <output-spec>
            <string/>
         </output-spec>
         <format-parameters>
            <formatter>simple</formatter>
         </format-parameters>
         <execute>/opt/solarflare/bin/sfvmkcli --object mclog --get --nic-name $val{nic-name}</execute>
      </command>
      <!-- esxcli sfvmk mclog set -->
      <command path="sfvmk.mclog.set">
         <description>Sets MC logging state to enable/ disable</description>
         <input-spec>
           <parameter name="nic-name" type="string" required="true" shortname="n">
            <description>The name of the NIC to configured.</description>
           </parameter>
            <parameter name="enable" type="string" required="true" shortname="e">
               <description>Enable/ Disable MC logging (Y/ Yes/ N / No).</description>
            </parameter>
         </input-spec>
         <output-spec>
            <string/>
         </output-spec>
         <format-parameters>
            <formatter>simple</formatter>
         </format-parameters>
         <execute>/opt/solarflare/bin/sfvmkcli --object mclog --set --nic-name $val{nic-name} --enable $val{enable}</execute>
      </command>
      <!-- esxcli sfvmk statistics get -->
      <command path="sfvmk.stats.get">
         <description>Gets Rx/ Tx hardware queue statistics</description>
         <input-spec>
           <parameter name="nic-name" type="string" required="true" shortname="n">
            <description>The name of the NIC to configured.</description>
           </parameter>
         </input-spec>
         <output-spec>
            <string/>
         </output-spec>
         <format-parameters>
            <formatter>simple</formatter>
         </format-parameters>
         <execute>/opt/solarflare/bin/sfvmkcli --object stats --get --nic-name $val{nic-name}</execute>
      </command>
      <!-- esxcli sfvmk vpd get -->
      <command path="sfvmk.vpd.get">
         <description>Gets Vital Product Data</description>
         <input-spec>
           <parameter name="nic-name" type="string" required="true" shortname="n">
            <description>The name of the NIC to configured.</description>
           </parameter>
         </input-spec>
         <output-spec>
            <string/>
         </output-spec>
         <format-parameters>
            <formatter>simple</formatter>
         </format-parameters>
         <execute>/opt/solarflare/bin/sfvmkcli --object vpd --get --nic-name $val{nic-name}</execute>
      </command>

      <!-- esxcli sfvmk firmware get -->
      <command path="sfvmk.firmware.get">
         <description>Gets installed firmware version</description>
         <input-spec>
           <parameter name="nic-name" type="string" required="true" shortname="n">
            <description>The name of the NIC to configured.</description>
           </parameter>
         </input-spec>
         <output-spec>
            <string/>
         </output-spec>
         <format-parameters>
            <formatter>simple</formatter>
         </format-parameters>
         <execute>/opt/solarflare/bin/sfvmkcli --object firmware --get --nic-name $val{nic-name}</execute>
      </command>

      <!-- esxcli sfvmk firmware set -->
      <command path="sfvmk.firmware.set">
         <description>Sets new firmware image</description>
         <input-spec>
           <parameter name="nic-name" type="string" required="true" shortname="n">
            <description>The name of the NIC to configured.</description>
           </parameter>
            <parameter name="file-name" type="string" required="true" shortname="f">
               <description>Firmware image file name.</description>
            </parameter>
            <parameter name="type" type="string" required="true" shortname="t">
               <description>Firmware image type (controller/ bootrom/ uefirom).</description>
            </parameter>
         </input-spec>
         <output-spec>
            <string/>
         </output-spec>
         <format-parameters>
            <formatter>simple</formatter>
         </format-parameters>
         <execute>/opt/solarflare/bin/sfvmkcli --object firmware --set --nic-name $val{nic-name} --file-name $val{file-name} --type $val{type}</execute>
      </command>
   </commands>
</plugin>
